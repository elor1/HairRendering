#version 440

layout(vertices = 4) out;

uniform int numHairPatch;
uniform int numHairSegments;

in vec3 position_v[];

out vec3 position_tc[];

void main()
{
	position_tc[gl_InvocationID] = position_v[gl_InvocationID];

	if (gl_InvocationID == 0)
	{
		gl_TessLevelOuter[0] = numHairPatch;
		gl_TessLevelOuter[1] = numHairSegments;
	}
}