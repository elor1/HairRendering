#version 440

layout(isolines) in;

in vec3 position_tc[];

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

void main()
{
	vec3 point1 = mix(position_tc[0], position_tc[1], gl_TessCoord.x);
    vec3 point2 = mix(position_tc[2], position_tc[3], gl_TessCoord.x);

    gl_Position = projection * view * model * vec4(mix(point1, point2, gl_TessCoord.y), 1);
}