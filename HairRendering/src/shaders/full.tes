#version 440

layout(triangles, equal_spacing, ccw) in;

in vec3 position_tc[];

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

void main()
{
	vec3 point0 = gl_TessCoord.x * position_tc[0];
	vec3 point1 = gl_TessCoord.y * position_tc[1];
	vec3 point2 = gl_TessCoord.z * position_tc[2];

	gl_Position = projection * view * model * vec4(point0 + point1 + point2, 1);
}